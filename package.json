{
  "name": "@martellosecurity/conditions",
  "version": "0.2.2",
  "description": "A library of pre-condition, post-condition and invariant helpers",
  "keywords": [
    "pre-condition",
    "post-condition",
    "invariant",
    "validation"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "make": "tsc",
    "test": "jest",
    "lint": "eslint '**/*.ts'"
  },
  "author": "Martello Security",
  "homepage": "https://www.martellosecurity.com",
  "repository": "github:martellosecurity/conditions-nodejs",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-plugin-tsdoc": "^0.2.4",
    "jest": "^25.5.2",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3"
  },
  "files": [
    "dist/**/*"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 100
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "eslint-plugin-tsdoc"
    ],
    "ignorePatterns": [
      "node_modules/",
      "dist/",
      "test/"
    ],
    "rules": {
      "tsdoc/syntax": "warn"
    }
  }
}
